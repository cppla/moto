{
  "log": {
    "level": "debug",
    "path": "./moto.log",
    "version": "1.0.1",
    "date": "2024-07-23"
  },
  "wafs": [
    {
      "name": "限制单位时间内总请求次数@threshold",
      "blackcountry": [
        "US"
      ],
      "threshold": 200,
      "findtime": 30,
      "bantime": 86400
    },
    {
      "name": "限制单位时间内总数据量@threshold",
      "blackcountry": [
        "TW",
        "US"
      ],
      "threshold": 10240,
      "findtime": 30,
      "bantime": 86400
    }
  ],
  "rules": [
    {
      "name": "正常模式",
      "listen": ":81",
      "mode": "normal",
      "timeout": 3000,
      "blacklist": null,
      "targets": [
        {
          "address": "223.5.5.5:80"
        },
        {
          "address": "223.5.5.5:80"
        }
      ]
    },
    {
      "name": "正则模式",
      "listen": ":82",
      "mode": "regex",
      "timeout": 3000,
      "blacklist": null,
      "targets": [
        {
          "regexp": "^(GET|POST|HEAD|DELETE|PUT|CONNECT|OPTIONS|TRACE)",
          "address": "223.5.5.5:80"
        },
        {
          "regexp": "^SSH",
          "address": "223.5.5.5:22"
        }
      ]
    },
    {
      "name": "智能加速",
      "listen": ":83",
      "mode": "boost",
      "timeout": 300,
      "blacklist": null,
      "targets": [
        {
          "address": "223.5.5.5:85"
        },
        {
          "address": "223.5.5.5:85"
        }
      ]
    },
    {
      "name": "轮询模式",
      "listen": ":84",
      "mode": "roundrobin",
      "timeout": 300,
      "blacklist": null,
      "targets": [
        {
          "address": "223.5.5.5:85"
        },
        {
          "address": "223.5.5.5:85"
        }
      ]
    }
  ]
}
